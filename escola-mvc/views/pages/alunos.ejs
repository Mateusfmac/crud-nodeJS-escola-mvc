<%- include('../partials/header'); %>

<body>
  <section class="container">
    <div class="row">
      <div class="col">
        <div class="row mt-5">
          <div class="col-6">
            <h1>Lista de Alunos Cadastrados</h1>
          </div>

          <div class="col-6">
            <a href="/alunos/cadastroAluno" class="btn btn-primary">Cadastrar Novo Aluno</a>
          </div>
        </div>

        <table class="table table-hover">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Data Nascimento</th>
              <th>Turma</th>
              <th>Nota</th>
              <th>Matricula</th>
              <th>Telefone</th>
              <th>Ações</th>
            </tr>
          </thead>

          <tbody>
            <!-- produtos do DB collection// produto de objetos -->
            <% dados_alunos.forEach(function(aluno){ %>
            <tr>
              <td> <%= aluno.nome %> </td>
              <td> <%= aluno.dataNasc %> </td>
              <td> <%= aluno.turma %> </td>
              <td> <%= aluno.nota %> </td>
              <td> <%= aluno.matricula %> </td>
              <td> <%= aluno.tel %> </td>
              <td>
                <a href="/alunos/editarAluno/ <%=aluno._id %>" class="btn btn-danger">Editar</a>
                <a href="/alunos/deletarAluno/<%= aluno._id %>" class="btn btn-warning">Deletar</a>
              </td>
            </tr>
            <% }) %>

            <!--  condicao mensagem -->
            <% if(dados_alunos == 0){ %>
            <div class="alert alert-warning" role="alert">
              Não há alunos cadastrados
            </div>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</body>

<%- include('../partials/footer'); %>